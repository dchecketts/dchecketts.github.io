{
  "scripts": {
    "start": "eleventy --serve",
    "build": "npm-run-all build:11ty build:css",
    "build:11ty": "eleventy",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./_site/style.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./_site/style.css --watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/typography": "^0.5.19",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17"
  }
}
