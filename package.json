{
  "name": "racing-proto",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tailwindcss -i ./src/styles/tailwind-input.css -o ./src/styles/tailwind.css && vite build",
    "dev-tailwind": "concurrently \"vite\" \"tailwindcss -i ./src/styles/tailwind-input.css -o ./src/styles/tailwind.css --watch\"",
    "tidy": "prettier --write \"./**/*.{js,css,html}\" --ignore-path .gitignore",
    "tidy-tailwind": "npx tailwindcss -i ./src/styles/tailwind-input.css -o ./dist/output.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "glob": "^13.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18"
  }
}
